head
script(type='text/javascript', src='https://code.jquery.com/jquery-1.7.1.min.js')
script(src='../bower_components/jquery.countdown/dist/jquery.countdown.js')
meta(http-equiv='refresh', content='10')

body
  ul
    each driver in data
      li #{driver.name} : #{driver.timeback}. Store ID: #{driver.store_number}.
      p Countdown to Return:
      div(data-countdown=driver.timeback)

script.
  $('[data-countdown]').each(function() {
  var $this = $(this), finalDate = $(this).data('countdown');
  console.log($this);
  $this.countdown(finalDate, function(event) {
  $this.html(event.strftime('%M:%S'));
  });
  });


